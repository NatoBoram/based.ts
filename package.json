{
	"name": "@natoboram/based.ts",
	"version": "1.1.0",
	"description": "A TypeScript library for working with arbitrary bases",
	"keywords": [
		"base2",
		"base10",
		"base16",
		"base36",
		"base62",
		"base64",
		"uuid"
	],
	"homepage": "https://github.com/NatoBoram/based.ts",
	"bugs": {
		"url": "https://github.com/NatoBoram/based.ts/issues"
	},
	"license": "MPL-2.0",
	"author": {
		"name": "Nato Boram",
		"url": "https://github.com/NatoBoram"
	},
	"funding": [
		{
			"type": "patreon",
			"url": "https://www.patreon.com/NatoBoram"
		},
		{
			"type": "individual",
			"url": "https://paypal.me/NatoBoram/5"
		}
	],
	"files": [
		"dist",
		"!dist/**/*.test.*"
	],
	"main": "dist/index.js",
	"bin": {
		"basedts": "dist/main.js"
	},
	"repository": "github:NatoBoram/based.ts",
	"scripts": {
		"build": "tsgo --build",
		"build:watch": "tsgo --build --watch",
		"clean": "rm -rf coverage dist docs node_modules tsconfig.tsbuildinfo",
		"dev": "node ./src/main.ts",
		"docker": "pnpm run docker:build && pnpm run docker:run",
		"docker:build": "docker build -t based.ts .",
		"docker:kill": "docker ps --format '{{.Image}} {{.ID}}' | grep based.ts | awk '{print $2}' | xargs -r docker kill",
		"docker:run": "docker run based.ts",
		"predocs": "pnpm run build",
		"docs": "typedoc",
		"format": "prettier --write .",
		"inspector:http": "mcp-inspector --transport http --server-url \"http://localhost:3000/mcp\" node src/main.ts mcp http",
		"inspector:stdio": "mcp-inspector --transport stdio node src/main.ts mcp stdio",
		"lint": "eslint . && markdownlint-cli2 \"**/*.md\" && prettier --check .",
		"lint:fix": "eslint --fix --quiet .; markdownlint-cli2 \"**/*.md\" --fix; prettier --list-different --write .",
		"start": "node dist/main.js",
		"test": "vitest run",
		"test:coverage": "vitest run --coverage",
		"test:watch": "vitest"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.23.0",
		"commander": "^14.0.2",
		"cors": "^2.8.5",
		"express": "^5.1.0",
		"morgan": "^1.10.1",
		"zod": "^4.1.13"
	},
	"devDependencies": {
		"@eslint/js": "^9.39.1",
		"@modelcontextprotocol/inspector": "^0.17.2",
		"@types/cors": "^2.8.19",
		"@types/express": "^5.0.5",
		"@types/express-serve-static-core": "^5.1.0",
		"@types/morgan": "^1.9.10",
		"@types/node": "^24.10.1",
		"@types/qs": "^6.14.0",
		"@typescript/native-preview": "7.0.0-dev.20260101.1",
		"@vitest/coverage-v8": "^4.0.14",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"globals": "^16.5.0",
		"jiti": "^2.6.1",
		"markdownlint-cli2": "^0.19.1",
		"prettier": "^3.6.2",
		"typedoc": "^0.28.14",
		"typescript": "~5.9.3",
		"typescript-eslint": "^8.48.0",
		"vitest": "^4.0.14"
	},
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		}
	},
	"types": "dist/index.d.ts",
	"module": "dist/index.js"
}
